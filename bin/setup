#!/usr/bin/env bash
# Author: Andy Gorman

SCRIPT_PATH=${0%/*}
if [ "$0" != "$SCRIPT_PATH" ] && [ "$SCRIPT_PATH" != "" ]; then
  cd "${SCRIPT_PATH}/.."
fi
 

echo -e "Creating symlink for dotfiles\n"

# symlink all the dotfiles
for f in $(find $(pwd) -name ".*" -not -name ".gitignore" -not -name ".git" -not -name ".swp") ; do 
	ln -sf "$f" $HOME
done

echo -e "Symlinks Created \n"

