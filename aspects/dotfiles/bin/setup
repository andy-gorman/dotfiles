#!/usr/bin/env bash
# Author: Andy Gorman

set -e

pushd "$(dirname "${BASH_SOURCE[0]}")/.." &> /dev/null
ln -sf "$(pwd)/files/base16-shell" "${HOME}/.config/"
echo -e "Creating symlink for dotfiles\n"

# symlink all the dotfiles (including .bashrc.d directory)
mapfile -d '' -t files < <(find "$(pwd)/files" -maxdepth 1 -name ".*" -not -name ".gitignore" -not -name ".swp" -print0)
for f in "${files[@]}"; do
	ln -sf "$f" "$HOME"
done

# Some specific plugins
ln -sf "$(pwd)/files/base16-tmux" "${HOME}/.tmux/plugins"

echo -e "Symlinks Created \n"
popd &> /dev/null
 
